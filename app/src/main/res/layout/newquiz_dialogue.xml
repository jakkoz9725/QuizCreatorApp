<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogConstraintLayout"
    android:layout_width="250dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    tools:layout_editor_absoluteX="81dp"
    tools:layout_editor_absoluteY="190dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/letterQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Q"
            android:textAlignment="center"
            android:textSize="44sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="45dp" />

        <TextView
            android:id="@+id/letterU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="U"
            android:textAlignment="center"
            android:textSize="44sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="45dp" />

        <TextView
            android:id="@+id/letterI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="I"
            android:textAlignment="center"
            android:textSize="44sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="45dp" />

        <TextView
            android:id="@+id/letterZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Z"
            android:textAlignment="center"
            android:textSize="44sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="45dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/quizNameETdialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="8dp"
        android:hint="Type Quiz name"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createQuizBTdialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/buttons_shape"
        android:text="Create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizNameETdialogue" />

</android.support.constraint.ConstraintLayout>