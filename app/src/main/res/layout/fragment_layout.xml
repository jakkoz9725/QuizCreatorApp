<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fragmentNumberT"
            android:layout_width="281dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:inputType="none"
            android:text="Question number "
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.014" />

        <EditText
            android:id="@+id/questionET"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edit_text"
            android:drawableStart="@drawable/question_icon_configuration"
            android:ems="10"
            android:fontFamily="@font/playfair_display"
            android:hint="Question name"
            android:inputType="none"
            android:paddingStart="4dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentNumberT"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/answer1ET"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edit_text"
            android:drawableStart="@drawable/ic_first_answer"
            android:ems="10"
            android:hint="Podaj odpowiedź 1"
            android:inputType="none"
            android:paddingStart="8dp"
            android:textAlignment="center"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionET"
            app:layout_constraintVertical_bias="0.013"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/answer2ET"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edit_text"
            android:drawableStart="@drawable/ic_second_answer"
            android:ems="10"
            android:hint="Podaj odpowiedź 2"
            android:inputType="none"
            android:paddingStart="8dp"
            android:textAlignment="center"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/answer1ET"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/answer3ET"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edit_text"
            android:drawableStart="@drawable/ic_thrid_answer"
            android:ems="10"
            android:hint="Podaj odpowiedź 3"
            android:inputType="none"
            android:paddingStart="8dp"
            android:textAlignment="center"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/answer2ET"
            app:layout_constraintVertical_bias="0.004"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/answer4ET"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edit_text"
            android:drawableStart="@drawable/ic_fourth_answer"
            android:ems="10"
            android:hint="Podaj odpowiedź 4"
            android:inputType="none"
            android:paddingStart="8dp"
            android:textAlignment="center"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/answer3ET"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="visible" />

        <Button
            android:id="@+id/deleteAnswerBtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edit_text"
            android:drawableStart="@drawable/ic_delete_red"
            android:fontFamily="@font/playfair_display"
            android:text="REM"
            android:textColor="#F80303"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/answer3ET"
            app:layout_constraintEnd_toStartOf="@+id/answer3ET"
            app:layout_constraintHorizontal_bias="0.684"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

        <Button
            android:id="@+id/addAnswerBtn"
            android:layout_width="53dp"
            android:layout_height="46dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="+"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/answer4ET"
            app:layout_constraintEnd_toEndOf="@+id/answer3ET"
            app:layout_constraintStart_toStartOf="@+id/answer3ET"
            app:layout_constraintTop_toBottomOf="@+id/answer2ET" />

        <Button
            android:id="@+id/deleteTextBtn"
            android:layout_width="36dp"
            android:layout_height="37dp"
            android:background="@drawable/custom_edit_text"
            android:text="DEL"
            android:visibility="gone" />

        <Button
            android:id="@+id/answerAcceptBtn"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_edit_text"
            android:drawableEnd="@drawable/ic_done_green"
            android:gravity="center"
            android:paddingStart="2dp"
            android:text="OK"
            android:textAlignment="center"
            android:visibility="gone"
            tools:visibility="gone" />

        <Button
            android:id="@+id/editAnswer1Btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/custom_edit_text"
            android:text="Edit"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/answer1ET"
            app:layout_constraintStart_toEndOf="@+id/answer1ET"
            app:layout_constraintTop_toTopOf="@+id/answer1ET" />

        <Button
            android:id="@+id/editAnswer2Btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/custom_edit_text"
            android:text="Edit"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/answer2ET"
            app:layout_constraintStart_toEndOf="@+id/answer2ET"
            app:layout_constraintTop_toTopOf="@+id/answer2ET" />

        <Button
            android:id="@+id/editAnswer3Btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/custom_edit_text"
            android:text="Edit"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/answer3ET"
            app:layout_constraintStart_toEndOf="@+id/answer3ET"
            app:layout_constraintTop_toTopOf="@+id/answer3ET" />

        <Button
            android:id="@+id/editAnswer4Btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/custom_edit_text"
            android:text="Edit"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/answer4ET"
            app:layout_constraintStart_toEndOf="@+id/answer4ET"
            app:layout_constraintTop_toTopOf="@+id/answer4ET" />

        <Button
            android:id="@+id/editQuestionBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/custom_edit_text"
            android:text="Edit"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/questionET"
            app:layout_constraintStart_toEndOf="@+id/questionET"
            app:layout_constraintTop_toTopOf="@+id/questionET"
            tools:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/answer1ET"
            app:layout_constraintEnd_toEndOf="@+id/answer1ET"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/answer1ET"
            app:layout_constraintTop_toTopOf="@+id/answer1ET"
            app:layout_constraintVertical_bias="0.0" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/answer2ET"
            app:layout_constraintEnd_toEndOf="@+id/answer2ET"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/answer2ET"
            app:layout_constraintTop_toTopOf="@+id/answer2ET"
            app:layout_constraintVertical_bias="0.0" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/answer3ET"
            app:layout_constraintEnd_toEndOf="@+id/answer3ET"
            app:layout_constraintStart_toStartOf="@+id/answer3ET"
            app:layout_constraintTop_toTopOf="@+id/answer3ET" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/answer4ET"
            app:layout_constraintEnd_toEndOf="@+id/answer4ET"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/answer4ET"
            app:layout_constraintTop_toTopOf="@+id/answer4ET"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/pickCorrectAnswerBtn"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Wybierz poprawna odpowiedz"
            android:textSize="12sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton4"
            app:layout_constraintVertical_bias="0.127" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>